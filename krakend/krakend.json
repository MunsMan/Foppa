{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true,
      "format": "default",
      "syslog_facility": "local3"
    },
    "telemetry/logstash": {
      "enabled": false
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": ":8090"
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "endpoints": [
    {
      "endpoint": "/v1/run/{username}/{function_id}",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/{username}/{function_id}",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "first-responder:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/v1/run/{username}/{function_id}",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/{username}/{function_id}",
          "encoding": "no-op",
          "sd": "static",
          "method": "POST",
          "host": [
            "first-responder:8000"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ],
  "output_encoding": "json",
  "debug_endpoint": true,
  "tls": {
    "public_key": "cert.pem",
    "private_key": "key.pem"
  }
}